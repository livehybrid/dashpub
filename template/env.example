# Authentication settings
JWT_REQUIRED=false
JWT_KEY=your-secret-key-here
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
API_KEY_HEADER=X-API-Key

# Dashboard settings
NEXT_PUBLIC_DASHPUBTITLE=My Dashboards
NEXT_PUBLIC_HOMETHEME=light
NEXT_PUBLIC_DASHPUBFOOTER=Hosted Splunk Dashboards
NEXT_PUBLIC_DASHPUBHOSTEDBY=Your Company
NEXT_PUBLIC_DASHPUBHOSTEDURL=https://yourcompany.com
NEXT_PUBLIC_DASHPUBREPO=https://github.com/yourusername/dashpub

# Tab rotation settings (runtime configuration via /api/config)
REACT_APP_TAB_ROTATION_INTERVAL=15000
REACT_APP_TAB_ROTATION_ENABLED=true

# Logging configuration
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DIR=./logs
LOG_RETENTION_DAYS=30

# Splunk HEC (HTTP Event Collector) configuration
SPLUNK_HEC_ENABLED=false
SPLUNK_HEC_URL=https://your-splunk-instance:8088/services/collector
SPLUNK_HEC_TOKEN=your-hec-token-here
SPLUNK_HEC_INDEX=main
SPLUNK_HEC_SOURCE=dashpub
SPLUNK_HEC_SOURCETYPE=dashpub:app:logs
SPLUNK_HEC_HOST=your-hostname
SPLUNK_HEC_BATCH_SIZE=100
SPLUNK_HEC_BATCH_TIMEOUT=5000
SPLUNK_HEC_MAX_RETRIES=3
SPLUNK_HEC_RETRY_DELAY=1000

# Splunk UI Port (for fetching static assets)
# Default: 8000 (Splunk's default UI port)
# Used when building dashboards to fetch static assets from Splunk UI
SPLUNKD_UI_PORT=8000

# Splunk UI Locale (for fetching static assets)
# Default: en-US (Splunk's default locale)
# Used when building dashboards to construct URLs for static assets (e.g., /en-US/static/...)
# Only needed if your Splunk instance uses a different locale
SPLUNKD_LOCALE=en-US

# Screenshot configuration
# Enable screenshots to display dashboard thumbnails on the home page
NEXT_PUBLIC_DASHPUBSCREENSHOTS=false
# Base URL where screenshots are hosted (e.g., https://your-domain.com or http://localhost:3000)
NEXT_PUBLIC_BASE_SCREENSHOT_URL=
# Screenshot directory name (default: screenshots)
NEXT_PUBLIC_DASHPUBSCREENSHOTDIR=screenshots
# Screenshot file extension (default: png)
NEXT_PUBLIC_DASHPUBSCREENSHOTEXT=png

# Breadcrumb navigation configuration
# Enable breadcrumb navigation at the top of dashboard pages (default: true)
# Set to 'false' to disable breadcrumbs
NEXT_PUBLIC_DASHPUBBREADCRUMBS=true
# Show back button in breadcrumb navigation (default: true)
# Set to 'false' to hide the back button
NEXT_PUBLIC_DASHPUBBREADCRUMBSBACKBUTTON=true

# Base URL configuration
# Used for generating absolute URLs in meta tags (og:image, og:url, etc.)
# Priority: NEXT_PUBLIC_URL (auto-prefixed with https://) > DASHPUB_URL > default (http://localhost)
# For Vercel deployments, VERCEL_URL is automatically set and used
# NEXT_PUBLIC_URL=your-app.vercel.app
# DASHPUB_URL=https://your-domain.com
